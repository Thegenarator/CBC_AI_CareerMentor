# Nginx Configuration for Static Files
# This allows Nginx to serve static files directly (better performance)

files:
  "/etc/nginx/conf.d/static.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      location /static {
        alias /var/app/current/static;
        expires 30d;
        add_header Cache-Control "public, immutable";
      }

