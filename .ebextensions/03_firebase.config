# Firebase Configuration File
# This file copies firebase_config.json to the application directory
# IMPORTANT: Replace the content below with your actual Firebase service account JSON

files:
  "/opt/python/current/app/firebase_config.json":
    mode: "000644"
    owner: webapp
    group: webapp
    content: |
      {
        "type": "service_account",
        "project_id": "REPLACE_WITH_YOUR_PROJECT_ID",
        "private_key_id": "REPLACE_WITH_YOUR_PRIVATE_KEY_ID",
        "private_key": "-----BEGIN PRIVATE KEY-----\nREPLACE_WITH_YOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n",
        "client_email": "REPLACE_WITH_YOUR_CLIENT_EMAIL",
        "client_id": "REPLACE_WITH_YOUR_CLIENT_ID",
        "auth_uri": "https://accounts.google.com/o/oauth2/auth",
        "token_uri": "https://oauth2.googleapis.com/token",
        "auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs",
        "client_x509_cert_url": "REPLACE_WITH_YOUR_CLIENT_X509_CERT_URL"
      }

